<% if flash[:notice] %>
  <div data-alert class="alert-box success radius">
    <%= flash[:notice] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<% if flash[:warning] %>
  <div data-alert class="alert-box alert radius">
    <%= flash[:warning] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>